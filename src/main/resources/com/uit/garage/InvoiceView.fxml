<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.uit.garage.controller.InvoiceController" spacing="10">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    <Label text="Danh sách hóa đơn" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TableView fx:id="invoiceTable">
        <columns>
            <TableColumn fx:id="colStt" text="STT" />
            <TableColumn fx:id="colLicense" text="Biển Số" />
            <TableColumn fx:id="colBrand" text="Hiệu Xe" />
            <TableColumn fx:id="colCustomer" text="Chủ Xe" />
            <TableColumn fx:id="colTotal" text="Tổng Tiền" />
            <TableColumn fx:id="colDetail" text="Chi Tiết" />
            <TableColumn fx:id="colPayment" text="Thanh Toán" />
        </columns>
    </TableView>


<!--    <Button text="Làm mới danh sách" onAction="#handleRefresh" />-->
</VBox>
